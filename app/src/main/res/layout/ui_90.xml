<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:background="#1e1e1e"
    android:layout_height="wrap_content">


    <View
        android:id="@+id/ui_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#1e1e1e"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />


    <Button
        android:id="@+id/b_reset"
        android:layout_width="70dp"
        android:layout_height="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/main_button"
        android:rotation="90"
        android:text="@string/reset"
        android:textAllCaps="false"
        android:textColor="#a4a4a4"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/ui_background"
        app:layout_constraintEnd_toStartOf="@+id/hits"
        app:layout_constraintTop_toTopOf="@+id/ui_background" />

    <Button
        android:id="@+id/b_reticle"
        android:layout_width="35dp"
        android:layout_height="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/main_button"
        android:rotation="90"
        android:text="Reticle"
        android:textAllCaps="false"
        android:textColor="#a4a4a4"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/target_y"
        app:layout_constraintEnd_toEndOf="@+id/textView3"
        app:layout_constraintTop_toTopOf="@+id/textView3" />

    <TextView
        android:id="@+id/hits"
        android:layout_width="36dp"
        android:layout_height="27dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="32dp"
        android:rotation="90"
        android:text="@string/hits"
        android:textColor="#a4a4a4"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/ui_background"
        app:layout_constraintEnd_toEndOf="@+id/ui_background"
        app:layout_constraintTop_toTopOf="@+id/ui_background" />

    <TextView
        android:id="@+id/hits_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="250dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:rotation="90"
        android:textColor="#a4a4a4"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/ui_background"
        app:layout_constraintEnd_toEndOf="@+id/ui_background"
        app:layout_constraintStart_toStartOf="@+id/ui_background"
        app:layout_constraintTop_toTopOf="@+id/ui_background" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="24dp"
        android:rotation="90"
        android:text="leftMargin"
        android:textColor="#a4a4a4"
        android:textSize="9sp"
        app:layout_constraintBottom_toTopOf="@+id/topText"
        app:layout_constraintEnd_toEndOf="@+id/textView7" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:rotation="90"
        android:text="bottomMargin"
        android:textColor="#a4a4a4"
        android:textSize="9sp"
        app:layout_constraintBottom_toBottomOf="@+id/ui_background"
        app:layout_constraintEnd_toStartOf="@+id/textView7"
        app:layout_constraintTop_toTopOf="@+id/ui_background" />

    <TextView
        android:id="@+id/bottomText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="135dp"
        android:rotation="90"
        android:text="TextView"
        android:textColor="#a4a4a4"
        android:textSize="9sp"
        app:layout_constraintBottom_toBottomOf="@+id/ui_background"
        app:layout_constraintEnd_toEndOf="@+id/textView6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ui_background" />

    <TextView
        android:id="@+id/leftText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="170dp"
        android:rotation="90"
        android:text="TextView"
        android:textColor="#a4a4a4"
        android:textSize="9sp"
        app:layout_constraintEnd_toEndOf="@+id/textView5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView5" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="42dp"
        android:rotation="90"
        android:text="topMargin"
        android:textColor="#a4a4a4"
        android:textSize="9sp"
        app:layout_constraintBottom_toBottomOf="@+id/ui_background"
        app:layout_constraintEnd_toEndOf="@+id/b_reset"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/topText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="200dp"
        android:rotation="90"
        android:text="TextView"
        android:textColor="#a4a4a4"
        android:textSize="9sp"
        app:layout_constraintBottom_toBottomOf="@+id/ui_background"
        app:layout_constraintEnd_toEndOf="@+id/textView7"
        app:layout_constraintStart_toStartOf="@+id/ui_background"
        app:layout_constraintTop_toTopOf="@+id/ui_background" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:rotation="90"
        android:text="rightMargin"
        android:textColor="#a4a4a4"
        android:textSize="9sp"
        app:layout_constraintEnd_toEndOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/topText" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:rotation="90"
        android:text="azimuth"
        android:textColor="#a4a4a4"
        android:textSize="10sp"
        app:layout_constraintEnd_toStartOf="@+id/textView5"
        app:layout_constraintTop_toTopOf="@+id/leftText" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:rotation="90"
        android:text="pitch"
        android:textColor="#a4a4a4"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="@+id/textView13"
        app:layout_constraintTop_toTopOf="@+id/textView13" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:rotation="90"
        android:text="roll"
        android:textColor="#a4a4a4"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="@+id/textView14"
        app:layout_constraintTop_toTopOf="@+id/textView14" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:rotation="90"
        android:text="target_x"
        android:textColor="#a4a4a4"
        android:textSize="10sp"
        app:layout_constraintEnd_toStartOf="@+id/textView15"
        app:layout_constraintTop_toTopOf="@+id/textView15" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="52dp"
        android:rotation="90"
        android:text="target_y"
        android:textColor="#a4a4a4"
        android:textSize="10sp"
        app:layout_constraintEnd_toStartOf="@+id/textView15"
        app:layout_constraintTop_toTopOf="@+id/textView15" />

    <TextView
        android:id="@+id/rightText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="170dp"
        android:rotation="90"
        android:text="TextView"
        android:textColor="#a4a4a4"
        android:textSize="9sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView9"
        app:layout_constraintEnd_toEndOf="@+id/textView9"
        app:layout_constraintStart_toStartOf="@+id/ui_background" />

    <TextView
        android:id="@+id/azimuth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:rotation="90"
        android:text="TextView"
        android:textColor="#a4a4a4"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="@+id/textView13"
        app:layout_constraintTop_toBottomOf="@+id/textView13" />

    <TextView
        android:id="@+id/pitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:rotation="90"
        android:text="TextView"
        android:textColor="#a4a4a4"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="@+id/azimuth"
        app:layout_constraintTop_toTopOf="@+id/azimuth" />

    <TextView
        android:id="@+id/roll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:rotation="90"
        android:text="TextView"
        android:textColor="#a4a4a4"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="@+id/pitch"
        app:layout_constraintTop_toTopOf="@+id/pitch" />

    <TextView
        android:id="@+id/target_x"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="52dp"
        android:rotation="90"
        android:text="TextView"
        android:textColor="#a4a4a4"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="@+id/pitch"
        app:layout_constraintTop_toTopOf="@+id/pitch" />

    <TextView
        android:id="@+id/target_y"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="88dp"
        android:rotation="90"
        android:text="TextView"
        android:textColor="#a4a4a4"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="@+id/pitch"
        app:layout_constraintTop_toTopOf="@+id/pitch" />


</androidx.constraintlayout.widget.ConstraintLayout>